* {
	font-family: $defaultFont;
}
button:focus,
input:focus {
	outline: 0;
}
@media (max-width: 1200px) {
	#header {
		position: absolute !important;
		background: transparent !important;
		background-image: none !important;
	}
}
#header {
	border-bottom: 1px solid $transparentShadow;
	background-image: $backgroundImage;
	position: fixed;
	padding: 25px;
	z-index: 1000;
	height: 60px;
	width: 100%;
	min-width: 1200px;
}
#header .headerButtons button {
	background-color: transparent;
	color: $textColor;
	border: none;
	width: 120px;
	margin-left: auto;
	margin-right: auto;
	left: 0;
	right: 0;
	height: 30px;
}
#header .headerIcon {
	float: left;
}
#header .headerInput {
	float: right;
}
#header .headerInput .summoner,
#header .headerInput .region {
	clear: all;
	vertical-align: top;
}
#header .headerIcon,
#header .headerButtons,
#header .headerInput {
	display: inline-block;
}
#header .headerButtons button:hover {
	background: linear-gradient(to bottom, transparent 50%, $transparentShadow 100%);
	border-radius: 4px;
}
.regionDropdown button {
	background-color: transparent;
	color: $textColor;
	border: 1px solid $transparentShadow;
	width: 150px;
	height: 30px;
}
#header .regionDropdown .regionBtnIcon {
	position: absolute;
	left: 5px;
	top: 6px;
}
.regionDropdown.open button,
.regionDropdown.open ul {
	border: 1px solid $textColor;
}
.summonerInput:focus {
	border: 1px solid $textColor;
}
.summonerInput {
	border: solid 1px $transparentShadow;
	color: $textColor;
	background: transparent;
}
#header .summonerInput {
	height: 30px;
	padding: 1px 8px;
}
.dropdown-menu {
	border: 1px solid $transparentShadow;
	background-color: $transparentLightBlack;
	right: 0;
	border-radius: 0;
}
.dropdown-menu a {
	color: white !important;
}
.dropdown-menu a:hover {
	color: $lightBlack !important;
	background-color: $textColor !important;
	font-weight: bold;
}
#header .regionBtnIcon {
	width: 18px;
	height: 18px;
	position: absolute;

}


#content {
	box-sizing: border-box;
	width: 100%;
	min-width: 1200px;
	padding-top: 80px;
	margin-bottom: 80px;
	padding-left: 150px;
	padding-right: 150px;
	z-index: 5;
}
#content .sortPotential.off {
	background-color: transparent;
	color: $textColor;
	min-width: 60px;
	border: 1px solid $transparentShadow;
}
#content .sortPotential.on {
	background-color: $transparentShadow;
	color: $textColor;
	min-width: 60px;
	border: 1px solid $transparentShadow;
}
#content  .championContainer {
	margin: 5px;
	display: inline-block;
	width: 150px;
	position: relative;
}
#gradient {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	background: linear-gradient(to bottom, transparent 60%, $lightBlack 90%);
	z-index: 100;
}
#championsWrapper {
	margin-left: auto;
	margin-right: auto;
}

#content .championContainer img {
	position: relative;
	max-width: 100% !important;
	max-height: 100% !important;
	z-index: 99;
}
#content .championContainer .championText {
	position: absolute;
	text-align: right;
	bottom: 10px;
	left: 10px;
	width: 130px;
	z-index: 101;
}

#content .commonDescription{
	min-width: 450px;
	width: 100%;
	min-height: 100px;
	margin-bottom: 10px;
}

#content .compare{
	max-width: 1200px;
}

#content .playerCompareCell{
	padding: 10px;
	min-height: 525px;
	border-color: black;
	border-width: 2px;
	border-radius: 10px;
	background-color: rgba(63, 63, 63, 0.7);;
	min-width: 450px;
	width: 47.5%;
	display: inline-block;
	vertical-align: top;
	text-align: left;
	margin-left: 0px;
	margin-right: 0px;
}

#content .playerHead {
	display: inline-block;
	margin: 10px;
}

#content .strSummonerName{
	margin: 10px;
	font-weight: bold;
	font-size: 30px;
}

#content .piechart{
	color: $textColor;
	text-align: center;
	width: 250px;
	height: 300px;
}
#content .c3-legend-item text {
 	fill: white;
}

#content #PlayerHeadRight {
	position: absolute;
	right: 10px;
}

#content #rightPieChart{
	position: absolute;
	right: 10px;
	bottom: 50px;
	margin-right: 10px;
}

#content #pieChart2{
	color: black;
}

#content .summonerLevel{
	margin: 10px;
	font-size: 18px;
}

#content .playerInfoContainer{
	display: inline-block;
}

#content .playerHead > img{
	margin: 10px;
	height: 128px;
	width: 128px;
}

#content #playerCompareCell2 {
	float:right;
	position: relative;
}

#content .inContentFooter{
	height: 100px;
	margin-left: 25%;
	width: 50%;
}


#splashScreen {
	text-align: center;
	font-size: 16px;
}
.inputWrapper {
	width: 100%;
	height: 100%;
	margin-top: 50px;
	margin-bottom: 50px;
}
.regions, .summoner {
	display: inline-block;
}
#splashScreen .regions button {
	width: 200px;
	margin-left: auto;
	margin-right: auto;
	left: 0;
	right: 0;
	min-height: 50px;
}
#splashScreen .summonerInput {
	padding: 1px 8px;
	border: 1px solid $transparentShadow;
	color: $textColor;
	background: transparent;
	height: 50px;
	width: 200px;
}
#splashScreen .regionBtnIcon {
	width: 18px;
	height: 18px;
	position: absolute;
	left: 10px;
	top: 16px;
}
.summonerInput:focus {
	border: 1px solid $textColor;
}
.smolText a {
	color: $textColor;
	font-size: 10px;
}
